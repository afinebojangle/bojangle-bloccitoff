<%= form_for [@list, @list.items.new] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter task description" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create new task", class: 'btn btn-success' %>
  </div>
<% end %>